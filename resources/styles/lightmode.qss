/* Light Mode - Background (applies to all pages) */
QWidget {
    background-color: #EAEAEA;
    color: #333;
}

QCheckBox::indicator {
    border: 2px solid #0078D7;
    border-radius: 4px;
    background-color: #EAEAEA;
    width: 12px;
    height: 12px;
}

QCheckBox::indicator:checked {
    background-color: #0078D7;
    border: 2px solid #0078D7;
    border-radius: 4px;
    image: url(:/pngs/resources/check.png);
}

QCheckBox::indicator:unchecked {
    background-color: #EAEAEA;
    border: 2px solid #0078D7;
    border-radius: 4px;
}


/* WelcomePg Styles */
WelcomePg QLabel {
    font-size: 20px;
    font-weight: bold;
    color: #333;
}

/* Welcome Label */
WelcomePg QLabel#welcome_label {
    font-size: 30px;
    font-weight: bold;
}

/* QPushButton Styling (Only inside WelcomePg) */
WelcomePg QPushButton {
    background-color: #0078D7;
    color: white;
    font-size: 17px;
    font-weight: bold;
    border: 2px solid #005A9E;
    border-radius: 10px;
    padding: 2px;
}

WelcomePg QPushButton:hover {
    background-color: #005A9E;
}

/* Sign Up & Sign In Buttons (Only inside WelcomePg) */
WelcomePg QPushButton#signUp, WelcomePg QPushButton#signIn {
    font-size: 17px;
    font-weight: bold;
}

/* About Button (Only inside WelcomePg) */
WelcomePg QPushButton#about {
    font-size: 15px;
    font-weight: bold;
}

/* ComboBox Styling (Only inside WelcomePg) */
WelcomePg QComboBox {
    background-color: #0078D7;  /* Blue background */
    color: white;  /* White text */
    font-size: 15px;
    font-weight: bold;
    font-family: "Arial", sans-serif;
    border: 2px solid #005A9E;
    border-radius: 8px;
    padding: 6px;
    padding-left: 10px;
}

/* Dropdown Button */
WelcomePg QComboBox::drop-down {
    width: 30px;
    background-color: #005A9E;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    subcontrol-origin: padding;
    subcontrol-position: right;
}

/* Drop-down Arrow */
WelcomePg QComboBox::down-arrow {
    image: url(":/pngs/resources/down.ico");
    width: 18px;  /* Bigger arrow */
    height: 18px;
}

/* Dropdown List Items */
WelcomePg QComboBox QAbstractItemView {
    background-color: #0078D7;
    color: white;
    border: 1px solid #005A9E;
    selection-background-color: #005A9E;
    selection-color: white;
    padding: 5px;
}

/* Login Label (Main Title) - Bigger */
