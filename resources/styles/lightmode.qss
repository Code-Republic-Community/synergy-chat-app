    background: #EAEAEA;
}


/* Calendar Navigation Bar (Month & Year Section) */
Registration QDateEdit QCalendarWidget QWidget#qt_calendar_navigationbar {
    background: #EAEAEA;
    color: black;
    border: #0078D7;
}

/* Month & Year Selector */
Registration QDateEdit QCalendarWidget QToolButton {
    background: #EAEAEA;
    color: black;
    border: #0078D7;
    font-weight: bold;
    padding: 2px 10px; /* Adjust right padding to push the arrow away */
}

Registration QDateEdit QCalendarWidget QToolButton#qt_calendar_yearbutton,
Registration QDateEdit QCalendarWidget QToolButton#qt_calendar_monthbutton {
    background: transparent;
    color: black;
    border: #0078D7;
    font-weight: bold;
    padding-left: 1px; /* Moves text to the left */
}

/* === Drop-down Arrow Styling === */
Registration QDateEdit QCalendarWidget QToolButton::menu-indicator {
    subcontrol-position: right center;
    subcontrol-origin: padding;
    padding-right: 8px; /* Increases spacing between text and arrow */
    margin-left: 4px; /* Moves the indicator slightly to the right */
}



/* Previous & Next Month Buttons */
Registration QDateEdit QCalendarWidget QToolButton#qt_calendar_prevmonth {
    background: #EAEAEA;
    border: 1px solid #0078D7;
    border-radius: 3px;
    color: black;
    qproperty-icon: url(:/pngs/resources/left.png);
    qproperty-iconSize: 16px 16px;
    /* Set button size */
    width: 12px;
}

Registration QDateEdit QCalendarWidget QToolButton#qt_calendar_nextmonth {
    background: #EAEAEA;
    border: 1px solid #0078D7;
    border-radius: 3px;
    color: black;
    qproperty-icon: url(:/pngs/resources/right.png);
    qproperty-iconSize: 16px 16px;
    /* Set button size */
    width: 12px;
}


/* Navigation Buttons Hover Effect */
Registration QDateEdit QCalendarWidget QToolButton#qt_calendar_prevmonth:hover,
Registration QDateEdit QCalendarWidget QToolButton#qt_calendar_nextmonth:hover {
    background: white;
}




/* Drop-down Items */
Registration QDateEdit QCalendarWidget QComboBox QAbstractItemView {
    background: #EAEAEA;
    color: black;
    border: 2px solid #0078D7;
    selection-background-color: black;
    selection-color: white;
}

/* === REMOVE BLUE BACKGROUND FROM WEEKDAYS === */
Registration QDateEdit QCalendarWidget QHeaderView::section {
    background: #2E2E2E;  /* Remove blue background */
    color: black;  /* Text color */
    border: 2px solid #0078D7;
}

/* Day Numbers */
Registration QDateEdit QCalendarWidget QTableView {
    background: #EAEAEA;
    color: black;
    border: 1px solid #0078D7;  /* Blue border */
    padding: 2px 2px;
}


/* Today's Date */
Registration QDateEdit QCalendarWidget QTableView::item:!selected {
    background: #EAEAEA;
    color: black;
}

/* Selected Day */
Registration QDateEdit QCalendarWidget QTableView::item:selected {
    background: white;
    color: black;
}

